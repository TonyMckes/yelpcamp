---
import menuIcon from '../assets/Hamburger Menu.svg'
import logo from '../assets/Logo.svg'
import Link from '../components/Link.astro'

interface Props {
  location: string
}

const { location } = Astro.props
---

<body>
  <header class='navbar'>
    <div>
      <a href='/'>
        <img src={logo} alt='YelpCamp logo' />
      </a>
      <p>{location}</p>
    </div>
    <div>
      <button aria-label='Open menu'>
        <img src={menuIcon} alt='Menu Icon' />
      </button>
      <Link href='/sign-in' variant='navigation'>Login</Link>
      <Link href='/sign-up'>Create an account</Link>
    </div>
  </header>
  <slot />
  <footer>
    <img src={logo} alt='YelpCamp logo' />
  </footer>
</body>

<style>
  body {
    background: #fff;
    margin: 0 auto;
    max-width: 1280px;
  }
  .navbar > div {
    display: flex;
    align-items: center;
    gap: 1rem;
  }
  .navbar > div:last-child a {
    display: none;
  }
  .navbar > div > p {
    margin: 0;
    display: none;
  }

  button {
    padding: 0.375rem;
    background: #faf7f2;
    border-radius: 0.5rem;
    border: none;
    display: inline-flex;
    align-items: center;
    cursor: pointer;
    outline: none;
  }
  button:hover {
    background: #e6e1d9;
  }
  footer {
    margin: 5rem 1rem;
  }

  @media (min-width: 1024px) {
    .navbar > div {
      display: inline-flex;
    }
    .navbar > div:last-child button {
      display: none;
    }
    .navbar > div:last-child a {
      display: block;
    }
    .navbar > div > p {
      display: block;
    }
  }
</style>
