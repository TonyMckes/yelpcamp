---
import Link from './Link.astro'

export interface Props {
  title: string
  description: string
  slug: string
  image: string
}

const { slug, title, description, image } = Astro.props
---

<li>
  <img src={image} alt={title} />
  <h2>
    {title}
  </h2>
  <p>
    {description}
  </p>
  <Link variant='secondary' href={`/campgrounds/${slug}`}>View Campground</Link>
</li>

<style>
  li {
    border: 1px solid #dbdbdb;
    padding: 0.75rem;
    border-radius: 0.25rem;
  }
  img {
    width: 100%;
    border-radius: 0.375rem;
  }
  h2 {
    margin: 1rem 0 0 0;
    font-size: 1.25rem;
    transition: color 0.6s cubic-bezier(0.22, 1, 0.36, 1);
  }
  p {
    margin-top: 0.5rem;
    margin-bottom: 0;
    color: #444;
  }

  a {
    margin-top: 1rem;
    display: block;
    text-align: center;
  }
</style>
