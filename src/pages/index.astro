---
import logo from '../assets/Logo.svg'
import Highlights from '../components/Highlights.astro'
import Link from '../components/Link.astro'
import Partners from '../components/Partners.astro'
import RootLayout from '../layouts/RootLayout.astro'

const highlights = [
  'Add your own camp suggestions.',
  'Leave reviews and experiences.',
  'See locations for all camps.'
]
---

<RootLayout title='YelpCamp - Challenge'>
  <div class='background' aria-hidden='true'></div>
  <main>
    <header>
      <a href='/'>
        <img src={logo} alt='YelpCamp' />
      </a>
    </header>

    <picture>
      <source srcset='/hero-image-large.jpg' media='(min-width: 1024px)' />
      <img src='/hero-image-small.jpg' alt='Camping in the mountains' />
    </picture>

    <section>
      <h1>Explore the best camps on Earth.</h1>
      <p>
        YelpCamp is a curated list of the best camping spots on Earth.
        Unfiltered and unbiased reviews.
      </p>
      <Highlights highlights={highlights} />

      <Link href='/campgrounds'>View Campgrounds</Link>

      <Partners />
    </section>
  </main>
</RootLayout>

<style>
  header {
    margin: 2rem 1rem;
  }
  main {
    display: grid;
    grid-template-columns: 1fr;
  }
  picture {
    aspect-ratio: 1/1;
    height: 100%;
    overflow: hidden;
  }
  picture img {
    object-fit: cover;
    width: 100%;
    height: 100%;
  }

  section {
    margin: 2rem 1rem;
  }
  h1 {
    font-size: 2.5rem;
    font-weight: 800;
    margin: 0;
  }
  ul li {
    display: flex;
    align-items: center;
    gap: 0.75rem;
  }
  a {
    margin-top: 1.5rem;
  }
  section p {
    max-width: 80%;
  }
  @media (min-width: 768px) {
    picture {
      aspect-ratio: auto;
    }
  }

  @media (min-width: 1024px) {
    main {
      grid-template-columns: 55% 45%;
      grid-template-rows: auto 1fr;
      max-width: 1280px;
      margin: 0 auto;
    }
    section {
      margin: auto 1rem;
    }
    .background {
      background-image: url('/hero-image-large.jpg');
      background-repeat: no-repeat;
      background-position: center;
      background-size: cover;
      height: 100vh;
      right: 0;
      position: absolute;
      width: 45%;
    }
    picture {
      height: 100vh;
      grid-row: span 2 / span 2;
    }
    picture > * {
      display: none;
    }
  }
</style>
