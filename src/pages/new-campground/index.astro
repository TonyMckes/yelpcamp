---
import Button from '../../components/Button.astro'
import RootLayout from '../../layouts/RootLayout.astro'
import SiteLayout from '../../layouts/SiteLayout.astro'
---

<RootLayout title='Add a new campground'>
  <SiteLayout location='Home'>
    <main>
      <section>
        <h1>Add New Campground</h1>

        <form action=''>
          <label for='campground'>Campground Name</label>
          <input
            type='text'
            id='campground'
            placeholder='Seven Sisters Waterfall'
          />
          <label for='price'>Price</label>
          <input type='number' id='price' placeholder='$149' />
          <label for='image'>Image</label>
          <input type='text' id='image' placeholder='www.the...' />
          <label for='description'>Description</label>
          <textarea
            placeholder='The Seven Sisters is the 39th tallest waterfall in Norway. The 410-metre tall waterfall consists of seven separate streams, and the tallest of the seven has a free fall that measures 250 metres. The water fall is located along the Geirangerfjorden in Stranda Municipality in More og Romsdal county, Norway.'
            name='description'
            id='description'
            cols='30'
            rows='10'></textarea>

          <Button>Add Campground</Button>
        </form>
      </section>
    </main>
  </SiteLayout>
</RootLayout>

<style>
  section {
  }
  h1 {
    font-size: 2rem;
    font-weight: 800;
    margin: 0;
  }
  section {
    margin: 0 1rem;
  }
  label {
    margin-top: 1em;
    display: block;
  }
  :is(input, textarea) {
    display: block;
    width: 100%;
    padding: 1rem;
    background: #f7f7f7;
    border: none;
    outline: none;
    margin-top: 0.5rem;
  }
  :is(input, textarea):is(:focus, :hover) {
    background: #e6e6e6;
  }
  button {
    margin-top: 1.5rem;
  }
  @media (min-width: 768px) {
    section {
      width: 60ch;
    }
  }

  @media (min-width: 1024px) {
    section {
      margin: 0.5rem auto;
    }
  }
</style>
